    "jsdom": "^26.1.0",
    "lint-staged": "^15.5.2",
    "playwright": "^1.52.0",
    "prettier": "^3.5.3",
    "tw-animate-css": "^1.2.9",
    "typescript": "^5",
    "vitest": "^3.1.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  }
